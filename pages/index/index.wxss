/**index.wxss**/

page{
  background: #fcfafa
}
swiper,swiper image{
  width: 100%;
  height: 1000rpx;
}

.pro{
  width:30%;
  border-radius: 10rpx;
  margin: 5rpx;
  margin-bottom: 20rpx;
  background: #36a4e4;
  box-shadow: 0rpx 10rpx 15rpx cyan;/*卡片添加阴影*/
  border: 3rpx solid #ec1c1c;

}
.pro image{
  width: 100%;
  height: 200rpx;
  
}
.content{
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  width: 100%;
  display: flex;/*设置布局流式布局,形成排列效果*/
  flex-flow: wrap;/*wrap-reverse缠绕反向排列*/
  justify-content: space-around;/*每个小格子之间留有空隙，若一排不满会使格子居中*/
  border-bottom: 5rpx #c4cac9 solid;
  padding-bottom: 5rpx;

  
}
.i{
  width:30%;
  border-radius: 10rpx;
  margin: 5rpx;
  background: #36a4e4;
  box-shadow: 0rpx 10rpx 15rpx cyan;/*卡片添加阴影*/
  border: 3rpx solid #fcfafa;
  
}
.i.active{
    border: 3rpx solid #ec1c1c;

}
.i image{
  width: 100%;
  height: 200rpx;
}
.iContent{
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  width: 100%;
  display: flex;/*设置布局流式布局,形成排列效果*/
  flex-flow: wrap;/*wrap-reverse缠绕反向排列*/
  justify-content: space-around;/*每个小格子之间留有空隙，若一排不满会使格子居中*/
}
/* 底部 */
.bottom{
  width: 94%;
  height: 100rpx;
  margin: 0 auto;/*自动设置margin 会默认居中*/
  font-size: 50rpx;
  line-height: 100rpx;
  text-align: center;/*文本居中*/
  border-top: 1rpx #c4cac9 solid;
}
